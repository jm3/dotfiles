[alias]
  br    = branch
  ci    = commit -v
  co    = checkout
  di    = diff
  diw   = diff --word-diff
  hist  = log --reverse --format=old --date=short
  l     = log --graph --abbrev-commit --pretty=tight
  st    = status
  undo  = reset --soft HEAD^
  up    = pull --rebase
  wup   = log -p origin..@{0}

[achievement]
  upload = true
[branch]
  autosetuprebase = always
[core]
  quotepath    = false
  excludesfile = ~/.gitignore-global
[help]
  autocorrect = 1
[rerere]
  enabled = 1

[diff]
  tool = better-vimdiff
[difftool]
  prompt = false
[merge]
  tool          = better-vimdiff
[mergetool "better-vimdiff"]
  cmd           = better-vimdiff vim $BASE $LOCAL $REMOTE $MERGED
  trustExitCode = true
  keepBackup    = false
[mergetool "ediff"]
  cmd           = ediff $BASE $LOCAL
  keepBackup    = false

[color]
  branch    = auto
  diff      = auto
  status    = auto
  ui        = true
[color "branch"]
  current   = yellow reverse
  local     = yellow
  remote    = green
[color "diff"]
  meta      = cyan bold
  frag      = white
  old       = red
  new       = green
[color "status"]
  added     = yellow
  changed   = green
  untracked = cyan
[pretty]
  old = %Cgreen%ad %C(white)%aN%C(yellow)%d%Creset %s %Cblue%h
  tight = %Cblue%h%Creset -%C(yellow)%d%Creset %s %Cgreen%cr %C(white)%an

[push]
	default = simple
