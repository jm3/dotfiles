#!/bin/sh
# install recommended mac CLI + GUI apps as fast as possible

ruby -e "$(curl -fsSL http://proof.ly/install-homebrew)"
brew update

cli="

ack
dos2unix
figlet
git
gnupg
openssl
redis
watch
wget
youtube-dl

"

for app in $cli
do
  brew install $app
done

brew install caskroom/cask/brew-cask
brew cask update

gui="

airbuddy
alfred
audio-hijack
blender
charles
colorsnapper
db-browser-for-sqlite
dbeaver-community
fission
ghostty
gifski
github
grandperspective
handbrake
hazeover
hyper
istat-menus
iterm2
kaleidoscope
ledger-live
macvim
macwhisper
monitorcontrol
namechanger
obsidian
ollama
onepassword
postico
raindropio
raycast
rectangle
rotato
screenflow
sizeup
sketch
syntax-highlight
transmit
utc-menu-clock
vitamin-r
vlc
xscope

"

for app in $gui
do
  brew cask install $app
done

