#!/bin/sh
# install recommended mac CLI + GUI apps as fast as possible

ruby -e "$(curl -fsSL http://proof.ly/install-homebrew)"
brew update

cli="

ack
dos2unix
figlet
git
gnupg
openssl
redis
watch
wget
youtube-dl

"

for app in $cli
do
  brew install $app
done

brew install caskroom/cask/brew-cask
brew cask update

gui="

github
handbrake
iterm2
macvim
namechanger
onepassword
screenflow
sizeup
transmit
vlc

"

for app in $gui
do
  brew cask install $app
done

